<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xyz.upload.app.modular.system.dao.UploadMapper">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.xyz.upload.app.modular.system.model.Upload">
		<result column="open_id" property="openId" />
		<result column="name" property="name" />
		<result column="txid" property="txid" />
		<result column="type" property="type" />
	</resultMap>

	<sql id="Base_Column_List">
		open_id, `name`, txid, `type`
	</sql>


	<select id="findListByOpenId" resultType="com.xyz.upload.app.modular.system.model.Upload">
		select
		<include refid="Base_Column_List" />
		from upload where open_id = #{openId}
	</select>

	<select id="findByName" resultType="com.xyz.upload.app.modular.system.model.Upload">
		select
		<include refid="Base_Column_List" />
		from upload where txid = #{txid} and open_id = #{openId}
	</select>


	<insert id="insertUpload" parameterType="com.xyz.upload.app.modular.system.model.Upload">
		insert into `upload`
		<trim prefix="(" suffix=")" suffixOverrides="," >
			<if test="openId != null" >
				open_id,
			</if>
			<if test="name != null" >
				`name`,
			</if>
			<if test="txid != null" >
				txid,
			</if>
			<if test="type != null" >
				`type`,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides="," >
			<if test="openId != null" >
				#{openId,jdbcType=INTEGER},
			</if>
			<if test="name != null" >
				#{name,jdbcType=VARCHAR},
			</if>
			<if test="txid != null" >
				#{txid,jdbcType=VARCHAR},
			</if>
			<if test="type != null" >
				#{type,jdbcType=VARCHAR},
			</if>
		</trim>
	</insert>

</mapper>
