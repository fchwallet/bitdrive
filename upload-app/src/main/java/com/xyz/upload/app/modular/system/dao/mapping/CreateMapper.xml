<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xyz.upload.app.modular.system.dao.CreateMapper">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.xyz.upload.app.modular.system.model.Create">
		<id property="id" column="id" jdbcType="INTEGER"/>
		<result column="fch_address" property="fch_address" jdbcType="VARCHAR"/>
		<result column="txid" property="txid" jdbcType="VARCHAR" />
		<result column="drive_id" property="drive_id" jdbcType="VARCHAR" />
		<result column="encrypt" property="encrypt" jdbcType="INTEGER" />
		<result column="encrypted_pwd" property="encrypted_pwd" jdbcType="VARCHAR" />
		<result column="data" property="data" jdbcType="VARCHAR"/>
	</resultMap>

	<sql id="Base_Column_List">
		id, fch_address, txid, drive_id, encrypt, encrypted_pwd, `data`
	</sql>

	<select id="findByDriveId" resultType="com.xyz.upload.app.modular.system.model.Create">
		select
		<include refid="Base_Column_List" />
		from `create` where drive_id = #{driveId}
	</select>

	<insert id="insert" parameterType="com.xyz.upload.app.modular.system.model.Create">
		insert into `create`
		<trim prefix="(" suffix=")" suffixOverrides="," >
			<if test="fchAddress != null" >
				fch_address,
			</if>
			<if test="txid != null" >
				`txid`,
			</if>
			<if test="driveId != null" >
				drive_id,
			</if>
			<if test="encrypt != null" >
				`encrypt`,
			</if>
			<if test="encryptedPwd != null" >
				`encrypted_pwd`,
			</if>
			<if test="data != null" >
				`data`,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides="," >
			<if test="fchAddress != null" >
				#{fchAddress,jdbcType=VARCHAR},
			</if>
			<if test="txid != null" >
				#{txid,jdbcType=VARCHAR},
			</if>
			<if test="driveId != null" >
				#{driveId,jdbcType=VARCHAR},
			</if>
			<if test="encrypt != null" >
				#{encrypt,jdbcType=INTEGER},
			</if>
			<if test="encryptedPwd != null" >
				#{encryptedPwd,jdbcType=VARCHAR},
			</if>
			<if test="data != null" >
				#{data,jdbcType=VARCHAR},
			</if>
		</trim>
	</insert>

</mapper>
