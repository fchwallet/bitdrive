<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.upload.app.modular.system.dao.UserMapper">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.upload.app.modular.system.model.User">
		<id column="system_id" property="systemId" />
		<result column="user_id" property="userId" />
		<result column="open_id" property="openId" />
	</resultMap>

	<sql id="Base_Column_List">
		system_id, user_id, open_id
	</sql>


	<select id="findByUserId" resultType="com.upload.app.modular.system.model.User">
		select
		<include refid="Base_Column_List" />
		from user where user_id = #{userId}
	</select>

	<select id="findAllList" resultType="com.upload.app.modular.system.model.User">
		select
		<include refid="Base_Column_List" />
		from user limit #{offset},#{limit}
	</select>

	<select id="getCount" resultType="long">
		select
		count(0)
		from user
	</select>

	<insert id="inserUser" parameterType="com.upload.app.modular.system.model.User">
		insert into `user`
		<trim prefix="(" suffix=")" suffixOverrides="," >
			<if test="userId != null" >
				user_id,
			</if>
			<if test="openId != null" >
				open_id,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides="," >
			<if test="userId != null" >
				#{userId,jdbcType=VARCHAR},
			</if>
			<if test="openId != null" >
				#{openId,jdbcType=INTEGER},
			</if>
		</trim>
	</insert>

</mapper>
